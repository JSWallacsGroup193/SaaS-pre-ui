entrypoint = "index.js"
modules = ["nodejs-22", "python-3.11", "postgresql-16"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["firebird_3"]

[deployment]
run = ["bash", "-c", "cd backend && npm run start:prod"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["bash", "build.sh"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HVAC App"

[[workflows.workflow]]
name = "HVAC App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41275
externalPort = 3001
