model WorkOrder {
  id             String   @id @default(uuid())
  title          String
  customer       String
  status         String
  notes          String
  signaturePath  String?
  attachments    Attachment[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Attachment {
  id          String   @id @default(uuid())
  path        String
  workOrderId String
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id])
}
